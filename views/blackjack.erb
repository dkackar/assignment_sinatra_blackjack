<h3> Player Cards </h3>

<% player_deck.each do |card| %>
  <p>Player Card: <%= card %></p>
<% end %>

<h3> Dealer Cards </h3>

<% dealer_deck.each do |card| %>
  <p>Dealer Card: <%= card %></p>
<% end %>

